#!/bin/bash

echo "pühapäev - 0, esmaspäev - 1, ..., laupäev - 6"

echo -n "Sisesta millal sõidad ära: "
read a

echo -n "Sisesta reisi ööpäevade arv: "
read oo
#
# arvutamine
T=`echo "$a*$oo/5" | bc` #Kalkuleerib tagasijõudmis päeva

echo "Tagasi jõuate päeval number $T " #Prindib kirjutatud teksti ja saadud numbri arvutusest
